<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="lexises_custom_report_sale" inherit_id="sale.report_saleorder_document">

            <xpath expr="//t[@t-set='information_block']" position="replace">
            </xpath>

            <xpath expr="//t[@t-set='address']" position="replace">
                <div class="row">
                    <div class="col-6" style="padding:3px;margin-bottom:20px;">
                        <table style="width:100%;">
                            <colgroup>
                                <col width='40%'/>
                                <col width='60%'/>
                            </colgroup>
                            <tr>
                                <td>
                                    <h3 t-if="doc.name" style="font-weight:bold;">Devis</h3>
                                </td>
                                <td>
                                    <span t-if="doc.name" style="font-weight:bold;font-size:24px;">
                                        <t t-if="doc.name" t-esc="doc.name"/>
                                    </span>
                                </td>
                            </tr>
                            <tr>

                                <td>
                                    <span t-if="doc.date_order" t-field="doc.date_order"
                                          t-options="{'widget': 'date'}"/>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Société</div>
                                </td>
                                <td>

                                    <span t-if="doc.company_id" t-field="doc.company_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.user_id" style="font-weight:bold;">Votre contact</div>
                                </td>
                                <td>

                                    <span t-if="doc.user_id" t-field="doc.user_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Adresse</div>
                                </td>
                                <td>

                                    <t t-esc="doc.company_id.street"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Pays</div>
                                </td>
                                <td>

                                    <t t-if="doc.company_id.country_id" t-esc="doc.company_id.country_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Numéro d'entreprise</div>
                                </td>
                                <td>

                                    <t t-esc="doc.company_id.partner_id.ice"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Numéro de TVA</div>
                                </td>
                                <td>

                                    <t t-esc="doc.company_id.partner_id.itp"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Numéro de Téléphone</div>
                                </td>
                                <td>

                                    <t t-esc="doc.company_id.phone"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Adresse Email</div>
                                </td>
                                <td>

                                    <t t-esc="doc.company_id.email"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div t-if="doc.company_id" style="font-weight:bold;">Site Internet</div>
                                </td>
                                <td>

                                    <t t-esc="doc.company_id.website"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-6" style="width:100%;">

                        <p>
                            <table>
                                <colgroup>
                                    <col width='30%'/>
                                    <col width='70%'/>
                                </colgroup>

                                <tr>
                                    <td>Société :</td>
                                    <td>
                                        <span t-field="doc.partner_id"
                                              t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                                    </td>
                                </tr>
                            </table>
                        </p>

                    </div>

                </div>
            </xpath>
            <xpath expr="//div[@class='page']/div[1]" position="after">

                <div style="text-align:left;margin-bottom:15px;">
                    <t t-if="doc.texte_en_tete">
                        <span>OBJET:</span>
                        <t-esc t-field="doc.texte_en_tete"/>
                    </t>
                </div>
                <div style="text-align:left;">
                    <h3>Détail:</h3>
                </div>
            </xpath>

            <xpath expr="//div[@id='informations']" position="replace">
                <div class="row mt32 mb32" id="informations" style="display:none;">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Your Reference:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2"
                         name="expiration_date">
                        <strong>Expiration:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@class='page']/h2[1]"
                   position="replace">
                <h2></h2>
            </xpath>
            <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[@name='th_taxes']"
                   position="replace">
            </xpath>


            <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[@name='th_description']"
                   position="before">
                <th name="th_description" class="text-left">
                    <span>Type</span>
                </th>
            </xpath>


            <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[2]/tr/t/td[@name='td_taxes']"
                   position="replace">
            </xpath>

            <xpath expr="//table[@class='table table-sm o_main_table']/tbody/t[2]/tr/t/td[@name='td_name']"
                   position="before">
                <td name="sale_order_line_poste">
                    <span t-field="line.product_type"/>
                </td>
            </xpath>


        </template>
    </data>
</odoo>